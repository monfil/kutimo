<% provide(:title, 'Log in') %>
<div class="content is-large has-text-centered">
	<h1>Log in</h1>
</div>

<section class="section is-small">
	<div class="container">
		<div class="columns is-mobile">
			<div class="column is-8 is-offset-2">
				<%= form_for(:session, url: login_path) do |f| %>
					
					<div align= "left">
				    <%= f.label :email %>
			    </div>
			    <p class="control has-icon has-icon-right">
				    <%= f.email_field :email, class: "input email-input" %>
				    <span class="icon user">
              <i class="fa fa-envelope"></i>
            </span>
			    </p>

			    <div align= "left">
				    <%= f.label :password %>
			    </div>
			    <p class="control has-icon has-icon-right">
				    <%= f.password_field :password, class: "input password-input" %>
				    <span class="icon user">
              <i class="fa fa-lock"></i>
            </span>
			    </p>

			    <%= f.submit "Log In", class: "button is-primary is-fullwidth" %>

				<% end %>
				<br>
				<p id="ask">New user? <%= link_to "Sign up now!", signup_path %></p>

			</div>
		</div>
	</div>
</section>